div(ng-controller="TypeController as type")
  section
    .container
      .row
        .col-lg-12
          br
          h1.header Add new // type.type.name //
          form.form-horizontal(ng-submit='type.addNew()')
            .form-group(ng-repeat='key in type.fields')
              label.control-label.col-sm-2 // key | uppercase //
              .col-sm-10
                input.form-control(name='// key //' ng-model='type.node[key]')
            .form-group
              label.control-label.col-sm-2 Position
              .col-sm-10
                input.form-control(value='// type.node.latlng.lat + "," + type.node.latlng.lng //' name='latlng' disabled='disabled', readonly='readonly')
            .form-group(ng-if='type.parent.name')
              label.control-label.col-sm-2 Belongs to
              .col-sm-10
                select.form-control(ng-model='type.node.parent', ng-options='p.id as JSON.stringify(p) for p in type.parents')
            .form-group
              .col-sm-10.col-sm-offset-2
                #map(map-input map-model='type.node.latlng', style="height: 400px;" on-map-clicked='type.mapClicked(data)')
            .form-group
              .col-sm-10.col-sm-offset-2
                button.btn.btn-primary(type='submit') Create
